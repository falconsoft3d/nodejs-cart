<!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Categorys</h1>
        <div class="list-group">
          <a href="#" class="list-group-item">Sale</a>
          <a href="#" class="list-group-item">Account</a>
          <a href="#" class="list-group-item">Stock</a>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

      <div style="margin-top: 20px;"></div>

        <div class="row">
          {{#each products}}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="/img/module.png" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"> {{ this.name }} </a> / <a href="#">{{ this.category }}</a>
                </h4>
                <h5>{{ this.price }}</h5>
                <p class="card-text">{{ this.text }}</p>
              </div>
              <div class="card-footer">
                <a href="/product/{{ this.id }}" class="btn btn-primary">View Moduls</a>
              </div>
              
            </div>
          </div>
          {{/each}}

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->