<div class="carr-index">
  <div class="container">
      <h1 class="display-4">{{ data.title }} </h1>
      <p>We have differents <strong>Odoo ERP</strong> modules to improve various areas of the company, all day new Modules :).</p>
       <p class="lead">
      <a href="/store" class="btn btn-lg btn-secondary fw-bold border-white bg-white" style="color: #4D07E6;"> Explore the Store </a>
    </p>
  </div>
</div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
          <h1 class="display-4">Most downloaded</h1>
          <p class="lead">List of most downloaded modules</p>
          <div class="container">
          <div class="row">
          {{#each data.products }}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="/img/module.png" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#">{{ this.name }}</a>
                </h4>
                <h5 class="text-danger">{{ this.price }} €</h5>
                <p class="card-text">{{ this.text }}</p>
              </div>
              <div class="card-footer">
                <a href="/product/{{ this.id }}" class="btn btn-primary">View Moduls</a>
                <a href="/product/add/{{ this.id }}" class="btn btn-success">Add to Cart</a>
              </div>
              
            </div>
          </div>
         {{/each}}

        </div>
        <!-- /.row -->
        </div>

  </div>

  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
          <h1 class="display-4">About Me</h1>
          <p class="lead">Marlon Falcón Hernández, <a href="mailto:mfalconsoft@gmail.com">mfalconsoft@gmail.com</a></p>
          <p class="lead">Full Stack Developer - Odoo ERP, SAP MM, Javascript, MongoDB, Express, React, Node.Js, ES6,HTML & CSS.</p>
  </div>


  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
